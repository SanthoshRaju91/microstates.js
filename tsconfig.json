{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["es6", "es2017.object"],
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "removeComments": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/node"]
  },
  "files": ["src/main.ts"],
  "exclude": ["node_modules"]
}
